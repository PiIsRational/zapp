%% NAME Cut

// the goal of the grammar is to make it dependent on the
// controlflow instroduced by the cut operator

Grammar: "[]const u8"
       = Greeting Ending Eos { $2 }
       | Hello Ending Eos { $2 }
       ;

Greeting = "Hello" ^ " There"
         | "Hello"
         ;

Hello = "Hello World" ;

Ending: "[]const u8"
      = .* { $0 } ;

Eos = !. ;
